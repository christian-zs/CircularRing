<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="CircularRing">
        <attr name="roundColor" format="color" />
        <attr name="insideRoundColor" format="color" />
        <attr name="isShowScale" format="boolean" />
        <attr name="circleRadius" format="dimension" />
        <attr name="circleScaleTextColor" format="color" />
        <attr name="circleScaleTextSize" format="dimension" />
        <attr name="circleScaleColor" format="color" />
        <attr name="centerTextSize" format="dimension" />
        <attr name="centerTextColor" format="color" />
    </declare-styleable>

</resources>
